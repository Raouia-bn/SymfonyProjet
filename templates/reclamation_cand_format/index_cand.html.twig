{# <table>#}
<div class="py-3" style="">
    <div class="container">
        <div class="row">
            <div class="table-responsive" style="">
                <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Motif</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation_cand_format in reclamation_cand_formats %}
            <tr>
                <td>{{ reclamation_cand_format.id }}</td>
                <td>{{ reclamation_cand_format.motifReclamation }}</td>
                <td>{{ reclamation_cand_format.description }}</td>
                <td>
                    <a href="{{ path('reclamation_cand_format_show', {'id': reclamation_cand_format.id}) }}" class="btn btn-outline-info">show</a>
                    <a href="{{ path('reclamation_cand_format_delete', {'id': reclamation_cand_format.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_cand_format_new') }}" class="btn btn-info">Add a Reclamation</a>
{% endblock %}
