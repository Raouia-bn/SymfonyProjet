{% extends 'base_cand_interfaces.html.twig' %}

{% block title %}InscriFormation index{% endblock %}

{% block body %}
<div class="my-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12"><img class="img-fluid d-block rounded-circle w-25 mx-auto" src="https://img.aviationpros.com/files/base/cygnus/cavc/image/2007/07/workbridge_10017964.png?auto=format&fit=max&w=1200"></div>
        </div>
    </div>
</div>
<div class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12 py-3">
                <h3 class="display-3 text-center text-capitalize" style="">Inscription List</h3>
            </div>
        </div>
    </div>
</div>
<div class="">
    <div class="container">
        <div class="row">
            <div class="text-right col-md-12" align="right">
                <form class="form-inline" align="right">
                    <div class="input-group" align="right">
                        <input type="text" class="form-control form-control-lg" id="inlineFormInputGroup" placeholder="Search" align="right">
                        <div class="input-group-append" align="right"><button class="btn btn-primary" type="button" align="right"><i class="fa fa-search"></i></button></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="py-3" style="">
    <div class="container">
        <div class="row">
            <div class="table-responsive" style="">
                <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Etat</th>
                <th>Nom Of Project</th>
                <th>Interview</th>
                <th>Date</th>
                <th>Candidat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscri_formation in inscri_formations %}
            <tr>
                <td>{{ inscri_formation.id }}</td>
                <td>{{ inscri_formation.etat }}</td>
                <td>{{ inscri_formation.NomFormation }}</td>
                <td>{{ inscri_formation.session.designation }}</td>
                <td>{{ inscri_formation.session.datedeb ? inscri_formation.session.datedeb|date('Y-m-d') : '' }}</td>

                <td>{{ inscri_formation.getCandidate().email }}</td>

                <td>
                    <div class="col-md-12">
                        <a href="{{ path('inscri_formation_delete', {'id': inscri_formation.id}) }}" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   {#  <a href="{{ path('inscri_new') }}">Create new</a>#}
{% endblock %}