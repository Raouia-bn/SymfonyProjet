{% extends 'base.html.twig' %}



    {% block title %}Seance List{% endblock %}


    {% block body %}
<!DOCTYPE html>
<html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
<link rel="stylesheet" href="https://static.pingendo.com/bootstrap/bootstrap-4.3.1.css">

{# <logo> #}
<div class="my-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12"><img class="img-fluid d-block rounded-circle w-25 mx-auto" src="../../images/logo-trabsparente.png" style=""></div>
        </div>
    </div>
</div>
{# </logo>#}

{# <Interface Title>#}
<div class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12 py-3">
                <h3 class="display-3 text-center text-capitalize" style="">Seance List</h3>
            </div>
        </div>
    </div>
</div>
{# </Interface Title>#}

{# <Search area>#}
<div class="">
    <div class="container">
        <div class="row">
            <div class="text-right col-md-12" align="right">
                <form class="form-inline" align="right">
                    <div class="input-group" align="right">
                        <input type="text" class="form-control form-control-lg" id="inlineFormInputGroup" placeholder="Search" align="right">
                        <div class="input-group-append" align="right"><button class="btn btn-primary" type="button" align="right"><i class="fa fa-search"></i></button></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{# </Search area>#}

{# <table>#}
<div class="py-3" style="">
    <div class="container">
        <div class="row">
            <div class="table-responsive" style="">
                <table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Designation</th>
        <th>Duration</th>
        <th>Training name</th>
        <th>Session name</th>
        <th>Action</th>

    </tr>
    <thead>
    {% for l in listSeance %}
        <tr>
            <td>{{ l.id }}</td>
            <td>{{ l.designation }}</td>
            <td>{{ l.duree }}</td>
            <td>{{ l.session.formation.nomf }}</td>
            <td>{{ l.session.designation }}</td>
            <td>

                <div class="col-md-12">
                    <a href="{{ path('seance_show', {'id': l.id}) }}" class="btn btn-outline-info" style="">Show</a>
                </div>

            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
</div>
   </div>
   </div>
   </html>
{% endblock %}